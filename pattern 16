#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,j,n;
    cout<<"Enter The Number of pattern : ";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {

            printf(" %c",i+64);
        }
        cout<<endl;
    }
     for(i=n;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {

            printf(" %c",i+64);
        }
        cout<<endl;
    }
}


/*

1 1 1
0 0
1


*/
